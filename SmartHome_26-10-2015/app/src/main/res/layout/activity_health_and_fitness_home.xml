<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.paper.andreas.smarthome.HealthAndFitnessHomeActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/newPersonLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="Personal Information"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp"
                android:textStyle="bold"/>


            <TextView
                android:id="@+id/personnameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name : "
                android:layout_below="@id/newPersonLabel"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textSize="22sp"/>

            <EditText
                android:id="@+id/personnameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/personnameTextView"
                android:ems="10"
                />


            <TextView
                android:id="@+id/genderTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender : "
                android:layout_below="@id/personnameText"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textSize="22sp"/>

            <Spinner
                android:id="@+id/genderspinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/genderTextView" />



            <TextView
                android:id="@+id/heightTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Height : "
                android:layout_below="@id/genderspinner"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textSize="22sp"/>

            <EditText
                android:id="@+id/heightText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/heightTextView"
                android:ems="10"
                />

            <TextView
                android:id="@+id/weightTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight : "
                android:layout_below="@id/heightText"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textSize="22sp"/>

            <EditText
                android:id="@+id/weightText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/weightTextView"
                android:ems="10"
                />

            <Button
                android:id="@+id/nextbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:onClick="onHealthAndFitnessDetails"/>

        </RelativeLayout>




    </ScrollView>






</RelativeLayout>
